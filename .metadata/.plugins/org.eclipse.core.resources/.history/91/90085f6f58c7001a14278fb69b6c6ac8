package com.silencer.dao;

import static org.junit.Assert.*;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import org.junit.Test;

import com.silencer.entity.Users;

public class UserDAOTest {

	@Test
	public void test() {
		Users user1=new Users();
		user1.setEmail("Somayeh@yahoo.com");
		user1.setFullName("Somayeh");
		user1.setPassword("somi");
		
		EntityManagerFactory entityManagerFactory = Persistence.createEntityManagerFactory("SilencerStoreProject");
		EntityManager entityManager = entityManagerFactory.createEntityManager();
		
		UserDAO userDAO = new UserDAO(entityManager);
		user1 = userDAO.create(user1);
		
		
		entityManager.close();
		entityManagerFactory.close();
		
		assertTrue(user1.getUserId() > 0);
	}

}
