package com.silencer.controller.frontend.shoppingcart;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;

import com.silencer.dao.SilencerDAO;
import com.silencer.entity.Silencer;

public class ShoppingCart {
	
	Map<Silencer, Integer> cart = new HashMap<>();
	
	public void addItem(Silencer silencer, int quantity) {
		
		System.out.println("cart.containsKey(silencer) " + cart.containsKey(silencer));
	//	System.out.println("silencer id inside addItem method calss shopping cart ="+silencer.getSilencerId());
		
		SilencerDAO silencerDAO= new SilencerDAO();
		Silencer silencerOne = new Silencer();
		silencerOne = silencerDAO.get(silencer.getSilencerId());
		
		if (cart.containsKey(silencerOne)) {
		Integer totalQuantity = cart.get(silencerOne) + quantity;
			cart.put(silencerOne, totalQuantity);
		}else {
			cart.put(silencerOne, quantity);
		}
	}
	public void removeItem (Silencer silencer) {
		cart.remove(silencer);
	}
	
	public int getTotalQuantity() {
		int total= 0;
		
		Iterator<Silencer> iterator = cart.keySet().iterator();
		
		while (iterator.hasNext()) {
			
			Silencer silencer = iterator.next();
			Integer quantity = cart.get(silencer);
			total += quantity;
		}
		
		return total;
	}
	
	public double getTotalAmount() {
		double total = 0.0f;
		
		Iterator<Silencer> iterator = cart.keySet().iterator();
		
		while (iterator.hasNext()) {
			
			Silencer silencer = iterator.next();
			Integer quantity = cart.get(silencer);
			
			double subTotal = quantity *silencer.getPrice();
			
			total += subTotal;
		}
		return total;
		
	}
	public void clear() {
		cart.clear();
	}
	
	public int getTotalItems() {
		System.out.println("total Items call");
		return cart.size();
	}
	
	public Map<Silencer, Integer> getItems(){
		return this.cart;
	}

}
















































